<h1>All Products</h1>

<%= form_tag products_path, :method => 'get' do %>
  <p>
    <%= label_tag :search, 'Search Product' %>
    <%= text_field_tag :search, params[:search] %>
    <%= label_tag :location, 'Search Location' %>
    <%= text_field_tag :location, params[:locations] %>
    <%= submit_tag "Search" %>
  </p>
  <% end %>

<% @products.each do |product| %>



<%= link_to product do %>
<div class='index' >

  

  <ul class='index2'>
    <li> Product: <%=product.name%> </li>
    <li> Price: <%= number_to_currency(product.price) %> </li>
    <li> Location: <%= product.location%> </li>
  </ul>

</div>

<% end %>
<% end %>
