<h1>All Products</h1>

<div class="row justify-content-center">

  <div class="col-sm-10">
    <%= form_tag products_path, :method => 'get' do %>
    <%= label_tag :search, 'Search Product', :class => "form-label" %>
    <%= text_field_tag :search, params[:search], :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= label_tag :location, 'Search Location', :class => "form-label" %>
    <%= text_field_tag :location, params[:locations] , :class => "form-control" %>
  </div>

  <div class="col-sm-10">


    <%= submit_tag "Search", :class => "btn btn-primary" %>
  </div>

  <% end %>
  </div>


<% @products.each do |product| %>



<%= link_to product do %>
<div class='index' >

<%= cl_image_tag product.images.first, :class => 'thumb' %>

  <ul class='index2'>
    <li> Product: <%=product.name%> </li>
    <li> Price: <%= number_to_currency(product.price) %> </li>
    <li> Location: <%= product.location%> </li>
  </ul>

</div>

<% end %>
<% end %>
