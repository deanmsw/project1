<h1>Upload a new product</h1>


<%= form_for @product do |f| %>


  <div class="col-sm-10">
    <%= f.label :name, :class => "form-label" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= f.label :description, :class => "form-label" %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= f.label :images, :class => "col-sm-10" %>
    <%= f.file_field :images, :multiple => true %>
  </div>

  <div class="col-sm-10">
    <%= f.label :price, :class => "form-label" %>
    <%= f.text_field :price, :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= f.label :location, :class => "form-label" %>
    <%= f.text_field :location, :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= f.label :condition, :class => "form-label" %>
    <%= f.text_field :condition, :class => "form-control" %>
  </div>


  <div class="col-sm-10">
    <%= f.label :shipping, :class => "form-label" %>
    <%= f.text_field :shipping, :class => "form-control" %>
  </div>

  <div class="col-sm-10">
    <%= f.label :category_id, :class => "form-label"  %>
    <%= f.select :category_id, Category.pluck(:name, :id ) %>
  </div>

    <% f.label :user_id %>
    <%= f.hidden_field :user_id, value: @current_user.id  %>




  <%= f.submit "Upload!" %>

<% end %>

