<h1>Edit profile</h1>

<% if @current_user.present? %>

<%= form_for @user do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :tel %>
  <%= f.text_field :tel %>

  <%= f.label :password  %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label "User Profile Image:" %>
  <%= f.file_field :image %>

  <%= f.submit "Update Profile!" %>

<% end %>
<% end %>
