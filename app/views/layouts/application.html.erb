<!DOCTYPE html>
<html>
  <head>
    <title>Ecomerce</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
      <div class="container">
          <nav class="navbar navbar-dark bg-dark" id="nav1">
                <%= link_to 'Home', root_path %>
                <%= link_to 'All Products', products_path %>
                <%= link_to 'All Categories', categories_path %>
            </nav>

                  <% if @current_user.present? %>
                  <% if @current_user.admin? %>

                <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
                    <%= link_to 'All users', users_path, :id => 'nav2' %>
                    <%= link_to 'All Orders', orders_index_path, :id => 'nav2' %>
                </nav>

                <% end %>

                <nav id="nav1" class="navbar navbar-light" style="background-color: grey;">
                    <%= link_to 'New Products', new_product_path %>
                    <%= link_to 'My Products', users_products_path(@current_user) %>
                    <%= link_to 'Cart', carts_show_path %>
                    <%= link_to "Checkout", orders_new_path %>
                    <%= link_to 'Edit profile', edit_user_path(@current_user) %>
                    <%= link_to "Log out #{@current_user.email}", login_path, :method => 'delete' %>
                </nav>

                <% else %>
                <nav class="navbar navbar-light" id="nav2" style="background-color: #e3f2fd; ">
                    <%= link_to 'Sign up', new_user_path, :id => 'nav2' %>
                    <%= link_to 'Sign in', login_path, :id => 'nav2' %>
                <% end %>
                </nav>



          <%= yield %>



      </div>

  </body>
</html>
